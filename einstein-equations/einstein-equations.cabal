cabal-version:       2.4
name:                einstein-equations
version:             0.0.0.0
synopsis:            See README for more info
description:         See README for more info
homepage:            https://github.com/twesterhout/einstein-equations
bug-reports:         https://github.com/twesterhout/einstein-equations/issues
license:             BSD-3-Clause
license-file:        LICENSE
author:              Tom Westerhout
maintainer:          Tom Westerhout <14264576+twesterhout@users.noreply.github.com>
copyright:           2021 Tom Westerhout
category:            Math
build-type:          Simple
extra-doc-files:     README.md
                     CHANGELOG.md
tested-with:         GHC == 8.10.4

source-repository head
  type:                git
  location:            https://github.com/twesterhout/einstein-equations.git

common common-options
  build-depends:       base >= 4.13.0.0
                     , relude
  
  mixins:              base hiding (Prelude)
                     , relude (Relude as Prelude)
  
  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
  if impl(ghc >= 8.0)
    ghc-options:       -Wredundant-constraints
  if impl(ghc >= 8.2)
    ghc-options:       -fhide-source-paths
  if impl(ghc >= 8.4)
    ghc-options:       -Wmissing-export-lists
                       -Wpartial-fields
  if impl(ghc >= 8.8)
    ghc-options:       -Wmissing-deriving-strategies

  default-language:    Haskell2010
  default-extensions:  KindSignatures
                       DataKinds
                       TypeInType
                       GADTs
                       TypeFamilies
                       BangPatterns
                       FlexibleInstances
                       FlexibleContexts
                       DerivingStrategies
                       ScopedTypeVariables
                       TypeApplications
                       OverloadedStrings
                       StandaloneDeriving
                       AllowAmbiguousTypes
                       MultiParamTypeClasses
                       FunctionalDependencies
                       NoMonomorphismRestriction
                       InstanceSigs
                       TypeOperators
                       MagicHash
                       UnboxedTuples

library
  import:              common-options
  hs-source-dirs:      src
  build-depends:       primitive
                     , vector
                     , text
                     , streamly
                     , list-t
                     , foldl
                     , dlpack-hs
                     , tblis-hs
                     , halide-haskell
                     , reflection
                     , hasktorch >= 0.2 && < 0.3
                     , libtorch-ffi >= 1.9.0.0
  exposed-modules:     EinsteinEquations
                     , EinsteinEquations.Tensor
                     , EinsteinEquations.NewtonRaphson
                     , EinsteinEquations.Collocation
  extra-lib-dirs:      /home/tom/src/ads-cft/kernels/build
  extra-libraries:     blas
                     , lapack
                     -- , einstein_equations
                     , differentiation_matrix_periodic
                     , differentiation_matrix_bounded
                     , differentiation_matrix_periodic.runtime

executable einstein-equations
  import:              common-options
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       einstein-equations
  ghc-options:         -threaded
                       -rtsopts
                       -with-rtsopts=-N

test-suite einstein-equations-test
  import:              common-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       einstein-equations
                     , vector
                     , streamly
                     , primitive
                     , foldl
                     , hspec
                     , hasktorch >= 0.2 && < 0.3
  ghc-options:         -threaded
                       -rtsopts
                       -with-rtsopts=-N
